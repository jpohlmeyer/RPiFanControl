<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.rpifancontrol" name="RPiFanControl" version="0.0.2" provider-name="jpohlmeyer">
    <requires>
        <import addon="xbmc.python" version="2.25.0" />
        <import addon="virtual.rpi-tools" version="9.2.0"/>
    </requires>
    <extension point="xbmc.service" library="addon.py" start="login" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Service controlling a fan on pin 25 of a Raspberry Pi</summary>
        <description lang="en_GB">In the current state the fan will turn on at startup and turn off during shutdown.</description>
        <platform>all</platform>
        <license>MIT</license>
        <language></language>
    </extension>
</addon>
